@model IEnumerable<Teste.Timipro.Models.User>

@{
    ViewBag.Title = "Lista de Usuários";
}

<h2>Lista de Usuários</h2>

<p>
    @Html.ActionLink("Criar Novo Usuário", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Product.ProductName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.CPF)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.UserId }, new { @class = "btn btn-warning" }) |
        @Html.ActionLink("Detalhes", "Details", new { id = item.UserId }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("Excluir", "Delete", new { id = item.UserId }, new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table>
